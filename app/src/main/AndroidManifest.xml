<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.maka.xiaoxia">

    <!-- 安卓13及以上版本的新权限 -->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    
    <!-- 安卓14及以上版本需要额外的权限 -->
    <uses-permission android:name="android.permission.READ_MEDIA_VISUAL_USER_SELECTED" />
    
    <!-- 安卓12及以下版本的旧权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
        
    <!-- 音频设置权限 -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    
    <!-- 媒体按钮权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    
    <!-- 通知权限 - 安卓13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- 前台服务权限 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <application
        android:name=".MusicApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.XiaoxiaMusic"
        android:requestLegacyExternalStorage="true"
        android:enableOnBackInvokedCallback="true"
        android:allowNativeHeapPointerTagging="false"
        tools:targetApi="35">
        <activity
            android:name="com.maka.xiaoxia.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 文件浏览器Activity - 真正的文件管理器界面 -->
        <activity
            android:name="com.maka.xiaoxia.FileBrowserActivity"
            android:exported="false"
            android:label="选择音乐文件"
            android:theme="@style/Theme.XiaoxiaMusic" />
        
        <!-- 小组件配置活动 - 安卓4.4兼容性修复 -->
        <activity
            android:name="com.maka.xiaoxia.widget.WidgetConfigActivity"
            android:exported="true"
            android:theme="@style/Theme.XiaoxiaMusic">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        
        <!-- 后台音乐服务 -->
        <service android:name=".MusicService"
            android:enabled="true"
            android:exported="true"
            android:foregroundServiceType="mediaPlayback">
            <!-- 添加媒体浏览器服务声明，支持系统媒体控制 -->
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService" />
            </intent-filter>
        </service>
        
        <!-- 音乐播放小组件 - 标准版 -->
        <receiver android:name=".MusicWidgetProvider"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.maka.xiaoxia.action.UPDATE_WIDGET" />
                <action android:name="com.maka.xiaoxia.action.PLAY_PAUSE" />
                <action android:name="com.maka.xiaoxia.action.NEXT" />
                <action android:name="com.maka.xiaoxia.action.PREVIOUS" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/music_widget_info" />
        </receiver>
        

        
        <!-- 音乐控制广播接收器 - 安卓12+兼容性 -->
        <receiver android:name=".MusicControlReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.maka.xiaoxia.action.PLAY_PAUSE" />
                <action android:name="com.maka.xiaoxia.action.NEXT" />
                <action android:name="com.maka.xiaoxia.action.PREVIOUS" />
            </intent-filter>
        </receiver>
        
        <!-- 媒体按钮接收器 - 车机控制支持 -->
        <receiver android:name="androidx.media.session.MediaButtonReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        
        <!-- 车机实体按键接收器 - 领克02 CS11专用 -->
        <receiver android:name=".CarMediaButtonReceiver"
            android:exported="true"
            android:enabled="true"
            android:priority="1000">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        
        <!-- 车机实体按键服务 - 领克02 CS11兼容性 -->
        <service android:name=".MediaButtonService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />
            
        <!-- 车机专用小组件 - 领克02 CS11识别优化 -->
        <receiver android:name=".CarWidgetProvider"
            android:exported="true"
            android:enabled="true"
            android:label="车机音乐控制">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.maka.xiaoxia.action.UPDATE_CAR_WIDGET" />
                <action android:name="com.maka.xiaoxia.action.PLAY_PAUSE" />
                <action android:name="com.maka.xiaoxia.action.NEXT" />
                <action android:name="com.maka.xiaoxia.action.PREVIOUS" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/car_widget_info" />
        </receiver>
        
        <!-- 车机专用低内存小组件 - 极简设计 -->
        <receiver android:name=".CarWidgetProviderLowMemory"
            android:exported="true"
            android:enabled="true"
            android:label="车机音乐控制(低内存版)">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.maka.xiaoxia.action.UPDATE_CAR_WIDGET_LOW_MEMORY" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/car_widget_info_low_memory" />
        </receiver>
        
        <!-- 车机按键测试Activity -->
        <activity android:name=".CarKeyTestActivity"
            android:exported="true"
            android:label="车机按键测试">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>