<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Android 4.4兼容主题 - 无标题栏 -->
    <style name="Theme.XiaoxiaMusic" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 基础主题属性 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- 安卓15字体兼容性设置 -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <!-- 安卓15兼容性主题 -->
    <style name="Theme.XiaoxiaMusic.Compat" parent="Theme.XiaoxiaMusic">
        <!-- 禁用可能导致问题的字体设置 -->
        <item name="android:fontFamily">@null</item>
        <item name="fontFamily">@null</item>
    </style>
</resources>